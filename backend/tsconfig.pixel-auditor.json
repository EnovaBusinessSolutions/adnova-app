{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./backend/pixel-auditor",
    "outDir": "./backend/pixel-auditor-dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["backend/pixel-auditor/**/*.ts"]
}
