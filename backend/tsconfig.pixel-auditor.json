{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "pixel-auditor",
    "outDir": "dist-pixel-auditor",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["pixel-auditor/**/*.ts"],
  "exclude": ["dist-pixel-auditor", "node_modules"]
}
